import requests
import time
from supabase import create_client, Client
import json
from typing import List, Dict, Optional

# Configurare Supabase
SUPABASE_URL = "https://ftjfabgifsbdlnbxvgwo.supabase.co"
SUPABASE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImZ0amZhYmdpZnNiZGxuYnh2Z3dvIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTU1MTAyOTcsImV4cCI6MjA3MTA4NjI5N30.os3bsl_sSyeLQ7O-cLGS2fUGlNzdtaxc_py_e0mjGQI"

supabase: Client = create_client(SUPABASE_URL, SUPABASE_KEY)


class MALScraper:
    def __init__(self):
        self.base_url = "https://api.jikan.moe/v4"
        self.headers = {
            'User-Agent': 'AnimeRecommendationBot/1.0'
        }

    def get_top_anime(self, limit: int = 500, page: int = 25) -> List[Dict]:
        """ObÈ›ine lista cu top anime de pe MAL"""
        try:
            url = f"{self.base_url}/top/anime"
            params = {
                'limit': min(limit, 25),  # API limit
                'page': page
            }

            response = requests.get(url, headers=self.headers, params=params)
            response.raise_for_status()

            time.sleep(1)  # Rate limiting
            return response.json().get('data', [])

        except Exception as e:
            print(f"Eroare la obÈ›inerea top anime: {e}")
            return []

    def get_anime_details(self, mal_id: int) -> Optional[Dict]:
        """ObÈ›ine detaliile complete ale unui anime dupÄƒ MAL ID"""
        try:
            url = f"{self.base_url}/anime/{mal_id}/full"
            response = requests.get(url, headers=self.headers)
            response.raise_for_status()

            time.sleep(1)  # Rate limiting
            return response.json().get('data', {})

        except Exception as e:
            print(f"Eroare la obÈ›inerea detaliilor pentru anime {mal_id}: {e}")
            return None

    def get_anime_characters(self, anime_id: int) -> List[Dict]:
        """ObÈ›ine caracterele unui anime"""
        try:
            url = f"{self.base_url}/anime/{anime_id}/characters"
            response = requests.get(url, headers=self.headers)
            response.raise_for_status()

            time.sleep(1)
            return response.json().get('data', [])

        except Exception as e:
            print(f"Eroare la obÈ›inerea caracterelor pentru anime {anime_id}: {e}")
            return []

    def extract_character_traits(self, character_name: str, role: str) -> str:
        """Extrage trÄƒsÄƒturile caracterului bazate pe nume È™i rol"""
        name_lower = character_name.lower()
        role_lower = role.lower()

        traits = []

        # AnalizÄƒ bazatÄƒ pe rol
        if 'main' in role_lower:
            traits.append('protagonist')
        elif 'supporting' in role_lower:
            traits.append('supporting')

        # AnalizÄƒ bazatÄƒ pe nume (pattern recognition simplu)
        if any(word in name_lower for word in ['dark', 'shadow', 'death', 'demon']):
            traits.append('villain')
        elif any(word in name_lower for word in ['light', 'hero', 'pure', 'angel']):
            traits.append('heroic')
        elif any(word in name_lower for word in ['smart', 'genius', 'wise']):
            traits.append('intelligent')
        elif any(word in name_lower for word in ['funny', 'comic', 'joke']):
            traits.append('comedic')

        if not traits:
            traits.append('normal')

        return ' '.join(traits)

    def get_main_characters_names(self, mal_anime_id: int) -> List[str]:
        """ObÈ›ine numele caracterelor principale ale unui anime"""
        characters_data = self.get_anime_characters(mal_anime_id)
        main_characters = []

        # FiltreazÄƒ doar caracterele principale
        for char_data in characters_data:
            role = char_data.get('role', '').lower()
            if 'main' in role:
                character = char_data.get('character', {})
                character_name = character.get('name', 'Unknown')
                main_characters.append(character_name)

                # LimitÄƒm la maxim 5 caractere principale
                if len(main_characters) >= 5:
                    break

        return main_characters

    def extract_studio_name(self, studios_data: List[Dict]) -> Optional[str]:
        """Extrage numele studioului principal"""
        if studios_data:
            return studios_data[0].get('name')
        return None

    def extract_demographic(self, demographics_data: List[Dict]) -> Optional[str]:
        """Extrage categoria demograficÄƒ"""
        if demographics_data:
            return demographics_data[0].get('name')
        return None

    def find_anime_by_mal_id(self, anime_name: str) -> Optional[int]:
        """GÄƒseÈ™te MAL ID-ul unui anime dupÄƒ nume folosind search API"""
        try:
            url = f"{self.base_url}/anime"
            params = {
                'q': anime_name,
                'limit': 1
            }
            
            response = requests.get(url, headers=self.headers, params=params)
            response.raise_for_status()
            
            time.sleep(1)
            data = response.json().get('data', [])
            
            if data:
                return data[0].get('mal_id')
                
        except Exception as e:
            print(f"Eroare la cÄƒutarea anime-ului {anime_name}: {e}")
        
        return None

    def update_existing_anime(self, anime_record: Dict) -> bool:
        """ActualizeazÄƒ un anime existent cu noile coloane"""
        try:
            anime_id = anime_record['id']
            anime_name = anime_record['name']
            
            print(f"ğŸ”„ Actualizez: {anime_name}")
            
            # CautÄƒ MAL ID-ul
            mal_id = self.find_anime_by_mal_id(anime_name)
            
            if not mal_id:
                print(f"  âŒ Nu am gÄƒsit MAL ID pentru: {anime_name}")
                return False
            
            # ObÈ›ine detaliile complete
            anime_details = self.get_anime_details(mal_id)
            
            if not anime_details:
                print(f"  âŒ Nu am putut obÈ›ine detaliile pentru: {anime_name}")
                return False
            
            # Extrage noile date
            synopsis = anime_details.get('synopsis', '')
            if synopsis:
                # LimiteazÄƒ synopsis la 1000 de caractere pentru a evita probleme de storage
                synopsis = synopsis[:1000] + '...' if len(synopsis) > 1000 else synopsis
            
            studio = self.extract_studio_name(anime_details.get('studios', []))
            demographic = self.extract_demographic(anime_details.get('demographics', []))
            
            # PregÄƒteÈ™te update-ul
            update_data = {
                'synopsis': synopsis,
                'studio': studio,
                'demographic': demographic
            }
            
            # ActualizeazÄƒ Ã®n baza de date
            result = supabase.table('anime').update(update_data).eq('id', anime_id).execute()
            
            if result.data:
                print(f"  âœ… Actualizat cu succes!")
                print(f"    ğŸ“ Synopsis: {len(synopsis)} caractere")
                print(f"    ğŸ¢ Studio: {studio}")
                print(f"    ğŸ‘¥ Demographic: {demographic}")
                return True
            else:
                print(f"  âŒ Eroare la actualizare Ã®n baza de date")
                return False
                
        except Exception as e:
            print(f"âŒ Eroare la actualizarea anime-ului {anime_record.get('name', 'Unknown')}: {e}")
            return False

    def insert_anime(self, anime_data: Dict, mal_anime_id: int) -> Optional[int]:
        """InsereazÄƒ un anime nou Ã®n baza de date (cu toate coloanele)"""
        try:
            # ObÈ›ine detaliile complete
            anime_details = self.get_anime_details(mal_anime_id)
            main_characters = self.get_main_characters_names(mal_anime_id)

            # Extrage datele pentru noile coloane
            synopsis = ''
            studio = None
            demographic = None
            
            if anime_details:
                synopsis = anime_details.get('synopsis', '')
                if synopsis:
                    synopsis = synopsis[:1000] + '...' if len(synopsis) > 1000 else synopsis
                
                studio = self.extract_studio_name(anime_details.get('studios', []))
                demographic = self.extract_demographic(anime_details.get('demographics', []))

            # PregÄƒtire date
            anime_record = {
                'name': anime_data.get('title', 'Unknown'),
                'episodes': anime_data.get('episodes') or 0,
                'themes': [theme['name'] for theme in anime_data.get('themes', [])],
                'genres': [genre['name'] for genre in anime_data.get('genres', [])],
                'mains': main_characters,
                'synopsis': synopsis,
                'studio': studio,
                'demographic': demographic
            }

            # InsereazÄƒ Ã®n Supabase
            result = supabase.table('anime').insert(anime_record).execute()

            if result.data:
                print(f"âœ… Anime insereat: {anime_record['name']}")
                print(f"  ğŸ“ Caractere principale: {', '.join(main_characters)}")
                print(f"  ğŸ¢ Studio: {studio}")
                print(f"  ğŸ‘¥ Demographic: {demographic}")
                return result.data[0]['id']

        except Exception as e:
            print(f"âŒ Eroare la inserarea anime: {e}")

        return None

    def update_existing_records(self, batch_size: int = 50):
        """ActualizeazÄƒ toate recordurile existente cu noile coloane"""
        print("ğŸ”„ Ãncep actualizarea recordurilor existente...")
        
        try:
            # ObÈ›ine toate anime-urile care nu au synopsis completat
            result = supabase.table('anime')\
                .select('id, name')\
                .is_('synopsis', 'null')\
                .execute()
            
            anime_list = result.data
            total_anime = len(anime_list)
            
            print(f"ğŸ“Š GÄƒsite {total_anime} anime-uri de actualizat")
            
            updated_count = 0
            failed_count = 0
            
            for i, anime_record in enumerate(anime_list, 1):
                print(f"\nğŸ“Š Progres: {i}/{total_anime}")
                
                if self.update_existing_anime(anime_record):
                    updated_count += 1
                else:
                    failed_count += 1
                
                # Rate limiting
                time.sleep(2)
                
                # PauzÄƒ mai lungÄƒ la fiecare batch
                if i % batch_size == 0:
                    print(f"â¸ï¸ PauzÄƒ dupÄƒ {i} anime-uri...")
                    time.sleep(10)
            
            print(f"\nğŸ‰ Actualizare completÄƒ!")
            print(f"âœ… Actualizate cu succes: {updated_count}")
            print(f"âŒ EÈ™uate: {failed_count}")
            
        except Exception as e:
            print(f"âŒ Eroare la actualizarea recordurilor: {e}")

    def scrape_and_populate(self, num_pages: int = 4):
        """FuncÈ›ia principalÄƒ pentru scraping È™i populare (anime-uri noi)"""
        print("ğŸš€ Ãncepe scraping-ul MyAnimeList pentru anime-uri noi...")

        total_anime = 0

        for page in range(1, num_pages + 1):
            print(f"\nğŸ“„ Procesez pagina {page}...")
            
            anime_list = self.get_top_anime(limit=25, page=page)

            for anime_data in anime_list:
                mal_id = anime_data.get('mal_id')
                title = anime_data.get('title', 'Unknown')

                print(f"\nğŸ¯ Procesez: {title}")

                # VerificÄƒ dacÄƒ anime-ul existÄƒ deja
                existing = supabase.table('anime').select('id').eq('name', title).execute()

                if existing.data:
                    print(f"  âš ï¸ Anime-ul {title} existÄƒ deja, sÄƒrim peste el")
                    continue

                # InsereazÄƒ anime-ul cu toate coloanele
                anime_db_id = self.insert_anime(anime_data, mal_id)

                if anime_db_id:
                    total_anime += 1

                # Rate limiting
                time.sleep(2)

        print(f"\nğŸ‰ Scraping complet! Total anime noi procesate: {total_anime}")


def main():
    # VerificÄƒ conexiunea la Supabase
    try:
        test = supabase.table('anime').select('count').execute()
        print("âœ… Conexiunea la Supabase funcÈ›ioneazÄƒ!")
    except Exception as e:
        print(f"âŒ Eroare conexiune Supabase: {e}")
        print("VerificÄƒ SUPABASE_URL È™i SUPABASE_KEY")
        return

    # IniÈ›ializeazÄƒ scraper-ul
    scraper = MALScraper()

    # Alege ce vrei sÄƒ faci
    print("\nğŸ¯ Ce vrei sÄƒ faci?")
    print("1. ActualizeazÄƒ anime-urile existente cu noile coloane")
    print("2. AdaugÄƒ anime-uri noi")
    print("3. Ambele (actualizeazÄƒ existente, apoi adaugÄƒ noi)")
    
    choice = input("\nIntroduci opÈ›iunea (1/2/3): ").strip()
    
    if choice == "1":
        # ActualizeazÄƒ doar anime-urile existente
        scraper.update_existing_records()
        
    elif choice == "2":
        # AdaugÄƒ doar anime-uri noi
        scraper.scrape_and_populate(num_pages=200)
        
    elif choice == "3":
        # Ambele
        print("\nğŸ”„ Primul pas: Actualizez anime-urile existente...")
        scraper.update_existing_records()
        
        print("\nğŸ†• Al doilea pas: Adaug anime-uri noi...")
        scraper.scrape_and_populate(num_pages=200)
        
    else:
        print("âŒ OpÈ›iune invalidÄƒ!")


if __name__ == "__main__":
    main()
